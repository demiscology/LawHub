@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<div class="banner">
    <h2>Login</h2>
    <p><a>@Html.ActionLink("Home »", "Test", "Home")</a>Login</p>
</div>

<div class="container">
    <div class="row">
        <div class="col">
            <div class="main-content">
                <div class="signin-form profile">
                    <section>
                        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" asp-controller="Account" asp-action="Login" method="post">
                            <div class="signin-form">
                                <div>
                                    <h3 align="left">Login</h3>
                                    <hr />
                                    <h4 align="left">@ViewBag.Message</h4>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <input name="UserName" type="text" placeholder="UserName" required="">
                                    <input name="Password" type="password" placeholder="Password" required="">
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label asp-for="RememberMe">
                                                <input asp-for="RememberMe" />
                                                @Html.DisplayNameFor(m => m.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-default">Log in</button>
                                    </div>
                                    <div class="form-group">
                                        <p>
                                            <a asp-action="Register" asp-controller="Home">Register as a new user?</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

<!--SignUp Modal-->
<div id="popup">
    <div id="small-dialog" class="mfp-hide">
        <div class="signin-form profile">
            <h3>Sign Up</h3>
            <div class="login-form">
                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" asp-controller="Account" asp-action="Register" method="post">
                    <input name="Email" type="email" placeholder="E-mail" required="">
                    <input name="Username" type="text" placeholder="Username" required="">
                    <input name="Password" type="password" placeholder="Password" required="">
                    <input name="ConfirmPassword" type="password" placeholder="Confirm Password" required="">
                    <div class="text-danger text-justify">
                        <h4>Choose if you are registering as a Client or as a Lawyer</h4>
                    </div>
                    <div class="pull-left text-justify form-check">
                        <input type="radio" name="UserType" id="radio1" value="Lawyer">
                        <label for="radio1">Lawyer</label>
                        <input type="radio" id="radio2" name="UserType" value="Client" checked="checked">
                        <label for="radio2">Client</label>
                    </div>
                    <input type="submit" value="Sign Up">
                </form>


            </div>
        </div>
    </div>
</div>
