@using Microsoft.AspNetCore.Identity
@model Law_Hub.Models.Admin_Profile


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- banner -->
<div class="banner">
    <h2>Admin Home Page</h2>
    <p><a>@Html.ActionLink("Home »", "Index", "Admin")</a></p>
</div>
<!--//banner -->

<div class="services">
    <div class="container ">
        <h3 class="heading "></h3>
        <div class="service_grids">
            <div class="col-md-3 service_grid1">
                @if (Model.TItle == "Mr")
                {
                    <img src="~/Icons/MaleIcon.jpg" ) class="img-rounded" style="height:285px;width:285px;" alt="Profile Pics" />
                }
                else
                {
                    <img src="~/Icons/FemaleIcon.png" ) class="img-rounded" style="height:285px;width:285px;"  alt="Profile Pics" />
                }
            </div>
            <div class="col-md-3 service_grid2">
                <h3>Administrator</h3>
                <p>@Model.TItle  @Model.FirstName  @Model.OtherNames  @Model.LastName</p>
                <h3>Contact</h3>
                <p>Created By : @Model.CreatedBy</p>
                <p>@Model.PhoneNumber</p>
                <p>@Model.Email</p>
            </div>
            <div class="clearfix"></div>

        </div>
    </div>
</div>
