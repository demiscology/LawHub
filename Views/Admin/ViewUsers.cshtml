@{
    ViewData["Title"] = "ViewUsers";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    table {
        font-family: Arial,sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>

<!-- banner -->
<div class="banner">
    <h2>View Users</h2>
    <p><a>@Html.ActionLink("Home »", "Index", "Admin")</a>Manage Users » View Users</p>
</div>
<!--//banner -->
<!--Displaying Data from Controller-->


<table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Other Names</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Office Address</th>
            <th>User Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in ViewBag.LawyerSearch)
        {
            <tr>
                <td>@a.First_Name</td>
                <td>@a.Other_Names</td>
                <td>@a.Last_Name</td>
                <td>@a.Email</td>
                <td>@a.Phone_Number</td>
                <td>@a.Office_Address</td>
                <td>Lawyer</td>
            </tr>
        }
        @foreach (var a in ViewBag.ClientSearch)
        {
            <tr>
                <td>@a.FirstName</td>
                <td>@a.OtherNames</td>
                <td>@a.LastName</td>
                <td>@a.Email</td>
                <td>@a.Phone_Number</td>
                <td>N/A</td>
                <td>Client</td>
            </tr>
        }
    </tbody>
</table>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script src="~/DataTables/datatables.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
