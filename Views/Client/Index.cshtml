@model Law_Hub.Models.Clients_Profile


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutClients.cshtml";
}

<!-- banner -->
<div class="banner">
    <h2>HOME</h2>
</div>
<!--//banner -->

<div class="services">
    <div class="container ">
        <h3 class="heading "></h3>
        <div class="service_grids">
            <div class="col-md-3 service_grid1">
                @if (Model.ProfilePicture != null)
                {
                    <img src="~/ProfilePictures/@Model.ProfilePicture" class="img-rounded" style="height:285px;width:285px;" alt="Profile Picture" />
                }
                else if (Model.Sex == "Male")
                {
                    <img src="~/Icons/MaleIcon.jpg" class="img-rounded" style="height:285px;width:285px;" alt="Profile Picture" />
                }
                else
                {
                    <img src="~/Icons/FemaleIcon.png" class="img-rounded" style="height:285px;width:285px;" alt="Profile Picture" />

                }
            </div>
            <div class="col-md-3 service_grid2">
                <h3>Full Name</h3>
                <p>@Model.Title @Model.FirstName @Model.OtherNames @Model.LastName</p>
                <h3>Email</h3>
                <p>@Model.Email</p>
            </div>
            <div class="col-md-3 service_grid2">
                <h3>Phone number</h3>
                <p>@Model.Phone_Number</p>
            </div>
            <div class="clearfix"></div>

        </div>
    </div>
</div>