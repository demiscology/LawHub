@model IEnumerable<Law_Hub.Models.Lawyers_Profile>

@{
    ViewData["Title"] = "SearchPage";
    Layout = "~/Views/Shared/_LayoutClients.cshtml";
}

<style>
    table {
        font-family: Arial,sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>


<!-- banner -->
<div class="banner">
    <h2>SEARCH</h2>
    <p><a>@Html.ActionLink("Home »", "Index", "Client")</a>Search for a lawyer</p>
</div>
<!--//banner -->

<div class="container">
    <div class="header-address">
        <h2>Search for lawyers.</h2>
        <br />
    </div>
    <div>
        <p>You can search for lawyers by their names, location or/and areas of expertice.</p><br />
        <p>For example, "I'm in need of lawyer that provides legal advice on Land Documentations".</p><br />
    </div>
    <div class="modal-body modal-body-sub_agile">
        <div class="modal_body_left modal_body_left1">
            <input type="submit" onclick="Show()" value="View All Lawyers" />

            <form asp-action="Search" asp-controller="Client" method="post">
                <div class="styled-input agile-styled-input-top">
                    <input type="text" placeholder="I need a lawyer that.. " name="search" required="">
                </div>
                <input type="submit" value="Search">
            </form>
            <div>
                <p>@Html.ValidationSummary(false,"",new { @class="text-danger"})</p>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

<link href="~/DataTables/datatables.css" rel="stylesheet" />
<div class="services">
    <div class="container ">
        <h3 class="heading "></h3>
        <div class="service_grids">
            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Last Name</th>
                        <th>Sex</th>
                        <th>Phone Number</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var asset in Model)
                    {
                        <tr>
                            <td class="col-md-3 service_grid2">
                                <img src="~/images/serv1.jpg" class="img-rounded" alt="service1" />
                            </td>
                            <td class="col-md-3 service_grid2">@asset.Last_Name</td>
                            <td class="col-md-3 service_grid2">@asset.Sex</td>
                            <td class="col-md-3 service_grid2">@asset.Phone_Number</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>                  
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script src="~/DataTables/datatables.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>

<script>
    $(document).ready(function () {
        var x = document.getElementById("example");
        x.style.display = "none";
    });
    function Show() {
        var x = document.getElementById("example");
        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    }
</script>

<script src="~/js/jquery.validate.js"></script>
